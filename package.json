{
  "name": "punishment",
  "version": "1.0.0",
  "description": "Sistema avançado de moderação para Discord com arquitetura modular, punições escaláveis e integrações modernas.",
  "author": "FuncZero (Edimar Ferreira)",
  "license": "MIT",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "pm2 start ecosystem.config.js --env production",
    "stop": "pm2 stop punishment-bot",
    "restart": "pm2 restart punishment-bot",
    "monit": "pm2 monit",
    "logs": "pm2 logs punishment-bot",
    "dev": "nodemon index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "clean": "rm -rf logs/*.log"
  },
  "keywords": [
    "discord",
    "discord-bot",
    "moderation",
    "security",
    "punishment",
    "discord.js",
    "modular",
    "winston",
    "openai",
    "deepl"
  ],
  "dependencies": {
    "axios": "^1.8.4",
    "chalk": "^4.1.2",
    "dayjs": "^1.11.13",
    "deepl": "^1.0.13",
    "dotenv": "^16.4.5",
    "mongoose": "^8.3.3",
    "openai": "^4.93.0",
    "stripe": "^18.0.0",
    "winston": "^3.17.0",
    "node-fetch": "^2.7.0",
    "module-alias": "^2.2.2",
    "mercadopago": "^1.5.14",
    "discord.js": "^14.15.3",
    "better-sqlite3": "^11.9.1",
    "moment-timezone": "^0.5.48",
    "systeminformation": "^5.23.3"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5"
  },
  "_moduleAliases": {
    "@core": "src/core",
    "@jobs": "src/jobs",
    "@utils": "src/utils",
    "@tasks": "src/tasks",
    "@events": "src/events",
    "@models": "src/models",
    "@logger": "src/logger",
    "@client": "src/client",
    "@config": "src/config",
    "@modules": "src/modules",
    "@cache": "src/utils/cache",
    "@handlers": "src/handlers",
    "@database": "src/database",
    "@commands": "src/commands",
    "@services": "src/services",
    "@embeds": "src/utils/embeds",
    "@helpers": "src/utils/helpers",
    "@monitors": "src/utils/monitors",
    "@middlewares": "src/middlewares",
    "@loadMenus": "src/handlers/menus",
    "@loadModals": "src/handlers/modals",
    "@handleSlash": "src/handlers/slash",
    "@loadEvents": "src/handlers/events",
    "@permissions": "src/utils/permissions",
    "@loadCommands": "src/handlers/commands",
    "@loadSlashCommands": "src/handlers/slash",
    "@interactions": "src/handlers/interactions",
    "@loadButtonInteractions": "src/handlers/buttons",
    "@package.json": "./package.json"
  }
}
